        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Canvas x:Name="Zeichenfläche" HorizontalAlignment="Left" Height="700" Margin="84,10,0,0" VerticalAlignment="Top" Width="700"/>
        <Button x:Name="Spielfeld" Content="Erstelle Spielfeld" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonStartClick"/>
        <Button x:Name="StartStop" Content="Starte Animation" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="75" Click="StartStopAnimationOnClick"/>

    </Grid>
</Window>
